extends ../layouts/auth

block content
  .d-flex.flex-center.flex-column.flex-lg-row-fluid
    // begin::Wrapper
    .w-lg-500px.p-10
      // begin::Form
      form.form.w-100(novalidate="novalidate", id="kt_sign_in_form", data-kt-redirect-url="/")
        // begin::Heading
        .text-center.mb-11
          // begin::Title
          h1.text-gray-900.fw-bolder.mb-3 Sign In
          // end::Title
          // begin::Subtitle
          .text-gray-500.fw-semibold.fs-6 Your Social Campaigns
          // end::Subtitle=
        // begin::Heading
        // begin::Login options
        .row.g-3.mb-9
          // begin::Col
          .col-md-6
            // begin::Google link=
            a.btn.btn-flex.btn-outline.btn-text-gray-700.btn-active-color-primary.bg-state-light.flex-center.text-nowrap.w-100(href="#")
              img.h-15px.me-3(alt="Logo", src="assets/media/svg/brand-logos/google-icon.svg")
              | Sign in with Google
            // end::Google link=
          // end::Col
          // begin::Col
          .col-md-6
            // begin::Google link=
            a.btn.btn-flex.btn-outline.btn-text-gray-700.btn-active-color-primary.bg-state-light.flex-center.text-nowrap.w-100(href="#")
              img.theme-light-show.h-15px.me-3(alt="Logo", src="assets/media/svg/brand-logos/apple-black.svg")
              img.theme-dark-show.h-15px.me-3(alt="Logo", src="assets/media/svg/brand-logos/apple-black-dark.svg")
              | Sign in with Apple
            // end::Google link=
          // end::Col
        // end::Login options
        // begin::Separator
        .separator.separator-content.my-14
          span.w-125px.text-gray-500.fw-semibold.fs-7 Or with email
        // end::Separator
        // begin::Input group=
        .fv-row.mb-8
          // begin::Email
          input#email.form-control.bg-transparent(type="text", placeholder="Email", name="email", autocomplete="off")
          // end::Email
        // end::Input group=
        .fv-row.mb-3
          // begin::Password
          input#password.form-control.bg-transparent(type="password", placeholder="Password", name="password", autocomplete="off")
          // end::Password
        // end::Input group=
        // begin::Wrapper
        .d-flex.flex-stack.flex-wrap.gap-3.fs-base.fw-semibold.mb-8
          div
          // begin::Link
          a.link-primary(href="reset-password") Forgot Password ?
          // end::Link
        // end::Wrapper
        // begin::Submit button
        .d-grid.mb-10
          button.btn.btn-primary(type="submit", id="kt_sign_in_submit")
            // begin::Indicator label
            span.indicator-label Sign In
            // end::Indicator label
            // begin::Indicator progress
            span.indicator-progress
              | Please wait...
              span.spinner-border.spinner-border-sm.align-middle.ms-2
            // end::Indicator progress
        // end::Submit button
        // begin::Sign up
        .text-gray-500.text-center.fw-semibold.fs-6
          | Not a Member yet? 
          a.link-primary(href="signup") Sign up
        // end::Sign up
      // end::Form
    // end::Wrapper
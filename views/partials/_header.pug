html
  body
    // begin::Header
    .app-header(id="kt_app_header")
      // begin::Header container
      .app-container.container-fluid.d-flex.align-items-stretch.justify-content-between(id="kt_app_header_container")
        // begin::sidebar mobile toggle
        .d-flex.align-items-center.d-lg-none.ms-n3.me-2(title="Show sidebar menu")
          .btn.btn-icon.btn-active-color-primary.w-35px.h-35px(id="kt_app_sidebar_mobile_toggle")
            i.ki-duotone.ki-abstract-14.fs-1
              span.path1
              span.path2
        // end::sidebar mobile toggle
        // begin::Mobile logo
        .d-flex.align-items-center.flex-grow-1.flex-lg-grow-0
          a.d-lg-none(href="/")
            img.theme-light-show.h-30px(alt="Logo", src="assets/media/logos/atelier-black.svg")
            img.theme-dark-show.h-30px(alt="Logo", src="assets/media/logos/atelier-black.svg")
        // end::Mobile logo
        // begin::Header wrapper
        .d-flex.align-items-stretch.justify-content-between.flex-lg-grow-1(id="kt_app_header_wrapper")
          // begin::Menu wrapper
          .app-header-menu.app-header-mobile-drawer.align-items-stretch(data-kt-drawer="true", data-kt-drawer-name="app-header-menu", data-kt-drawer-activate="{default: true, lg: false}", data-kt-drawer-overlay="true", data-kt-drawer-width="225px", data-kt-drawer-direction="end", data-kt-drawer-toggle="#kt_app_header_menu_toggle", data-kt-swapper="true", data-kt-swapper-mode="{default: 'append', lg: 'prepend'}", data-kt-swapper-parent="{default: '#kt_app_body', lg: '#kt_app_header_wrapper'}")
          // end::Menu wrapper
          // begin::Navbar
          .app-navbar.flex-shrink-0
            // begin::Theme mode
            .app-navbar-item.ms-1.ms-lg-3
              // begin::Menu toggle
              a.btn.btn-icon.btn-custom.btn-icon-muted.btn-active-light.btn-active-color-primary.w-35px.h-35px.w-md-40px.h-md-40px(href="#", data-kt-menu-trigger="{default:'click', lg: 'hover'}", data-kt-menu-attach="parent", data-kt-menu-placement="bottom-end")
                i.ki-duotone.ki-night-day.theme-light-show.fs-1
                  span.path1
                  span.path2
                  span.path3
                  span.path4
                  span.path5
                  span.path6
                  span.path7
                  span.path8
                  span.path9
                  span.path10
                i.ki-duotone.ki-moon.theme-dark-show.fs-1
                  span.path1
                  span.path2
              // begin::Menu toggle
              // begin::Menu
              .menu.menu-sub.menu-sub-dropdown.menu-column.menu-rounded.menu-title-gray-700.menu-icon-gray-500.menu-active-bg.menu-state-color.fw-semibold.py-4.fs-base.w-150px(data-kt-menu="true", data-kt-element="theme-mode-menu")
                // begin::Menu item
                .menu-item.px-3.my-0
                  a.menu-link.px-3.py-2(href="#", data-kt-element="mode", data-kt-value="light")
                    span.menu-icon(data-kt-element="icon")
                      i.ki-duotone.ki-night-day.fs-2
                        span.path1
                        span.path2
                        span.path3
                        span.path4
                        span.path5
                        span.path6
                        span.path7
                        span.path8
                        span.path9
                        span.path10
                    span.menu-title Light
                // end::Menu item
                // begin::Menu item
                .menu-item.px-3.my-0
                  a.menu-link.px-3.py-2(href="#", data-kt-element="mode", data-kt-value="dark")
                    span.menu-icon(data-kt-element="icon")
                      i.ki-duotone.ki-moon.fs-2
                        span.path1
                        span.path2
                    span.menu-title Dark
                // end::Menu item
                // begin::Menu item
                .menu-item.px-3.my-0
                  a.menu-link.px-3.py-2(href="#", data-kt-element="mode", data-kt-value="system")
                    span.menu-icon(data-kt-element="icon")
                      i.ki-duotone.ki-screen.fs-2
                        span.path1
                        span.path2
                        span.path3
                        span.path4
                    span.menu-title System
                // end::Menu item
              // end::Menu
            // end::Theme mode
            // begin::User menu
            .app-navbar-item.ms-2.ms-1.ms-lg-3(id="kt_header_user_menu_toggle")
              // begin::Menu wrapper
              .cursor-pointer.symbol.symbol-35px.symbol-md-40px(data-kt-menu-trigger="{default: 'click', lg: 'hover'}", data-kt-menu-attach="parent", data-kt-menu-placement="bottom-end")
                img(src=`assets/media/avatars/${user.photo}`, alt='Profile Image')
              // begin::User account menu
              .menu.menu-sub.menu-sub-dropdown.menu-column.menu-rounded.menu-gray-800.menu-state-bg.menu-state-color.fw-semibold.py-4.fs-6.w-275px(data-kt-menu="true")
                // begin::Menu item
                .menu-item.px-3
                  .menu-content.d-flex.align-items-center.px-3
                    // begin::Avatar
                    .symbol.symbol-50px.me-5
                      img(src=`assets/media/avatars/${user.photo}`, alt='Profile Image')
                    // end::Avatar
                    // begin::Username
                    .d-flex.flex-column
                      .fw-bold.d-flex.align-items-center.fs-5 #{user.name}
                      a.fw-semibold.text-muted.fs-7 #{user.email}
                    // end::Username
                // end::Menu item
                // begin::Menu separator
                .separator.my-2
                // end::Menu separator
                // begin::Menu item
                .menu-item.px-5.my-1
                  a.menu-link.px-5(href="/me") Account Settings
                // end::Menu item
                // begin::Menu item
                .menu-item.px-5
                  a.menu-link.px-5(id="logout_button") Sign Out
                // end::Menu item
              // end::User account menu
              // end::Menu wrapper
            // end::User menu
          // end::Navbar
        // end::Header wrapper
      // end::Header container
    // end::Header

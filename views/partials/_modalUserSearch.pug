// begin::Modal - Users Search
.modal.fade(id="kt_modal_users_search", tabindex="-1", aria-hidden="true")
  // begin::Modal dialog
  .modal-dialog.modal-dialog-centered.mw-650px
    // begin::Modal content
    .modal-content
      // begin::Modal header
      .modal-header.pb-0.border-0.justify-content-end
        // begin::Close
        .btn.btn-sm.btn-icon.btn-active-color-primary(data-bs-dismiss="modal")
          i.ki-duotone.ki-cross.fs-1
            span.path1
            span.path2
        // end::Close
      // begin::Modal header
      // begin::Modal body
      .modal-body.scroll-y.mx-5.mx-xl-18.pt-0.pb-15
        // begin::Content
        .text-center.mb-13
          h1.mb-3 Search Members
          .text-muted.fw-semibold.fs-5 Invite Collaborators To Your Project
        // end::Content
        // begin::Search
        div(id="kt_modal_users_search_handler", data-kt-search-keypress="true", data-kt-search-min-length="2", data-kt-search-enter="enter", data-kt-search-layout="inline")
          // begin::Form
          form.w-100.position-relative.mb-5(data-kt-search-element="form", autocomplete="off")
            // begin::Hidden input(Added to disable form autocomplete)
            input(type="hidden")
            // end::Hidden input
            // begin::Icon
            i.ki-duotone.ki-magnifier.fs-2.fs-lg-1.text-gray-500.position-absolute.top-50.ms-5.translate-middle-y
              span.path1
              span.path2
            // end::Icon
            // begin::Input
            input.form-control.form-control-lg.form-control-solid.px-15(type="text", name="search", placeholder="Search by name or email...", data-kt-search-element="input")
            // end::Input
            // begin::Spinner
            span.position-absolute.top-50.end-0.translate-middle-y.lh-0.d-none.me-5(data-kt-search-element="spinner")
              span.spinner-border.h-15px.w-15px.align-middle.text-muted
            // end::Spinner
            // begin::Reset
            span.btn.btn-flush.btn-active-color-primary.position-absolute.top-50.end-0.translate-middle-y.lh-0.me-5.d-none(data-kt-search-element="clear")
              i.ki-duotone.ki-cross.fs-2.fs-lg-1.me-0
                span.path1
                span.path2
            // end::Reset
          // end::Form
          // begin::Search
          div(data-kt-search-element="search")
          // end::Search
          // begin::Wrapper
          .py-5
            // begin::Results(add d-none to below element to hide the users list by default)
            div(data-kt-search-element="results")
              input(type="hidden" id="project-id" value=`${project._id}`)
              each member in project.members
                div(current-user-id=`${member.account._id}`)
              .text-body.fw-semibold.fs-5 Add Members
              // begin::Users searched
              .mh-375px.scroll-y.me-n7.pe-7(id="users_add")
              // end::Users searched
              // begin::Actions
              .d-flex.flex-center.mt-15
                button.btn.btn-active-light.me-3(type="reset", id="kt_modal_users_search_reset", data-bs-dismiss="modal") Cancel
                button.btn.btn-primary(type="submit", id="kt_modal_users_search_submit") Add Selected Users
              // end::Actions
            // end::Results
          // end::Wrapper
        // end::Search
      // end::Modal body
    // end::Modal content
  // end::Modal dialog
// end::Modal - Users Search